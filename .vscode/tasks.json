{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build Project (Debug)",
			"type": "shell",
			"command": "g++",
			"args": [
				"-g",
				// 1. Chỉ cho compiler nơi tìm header (.hpp)
				"-I${workspaceFolder}/lib/SFML-2.6.1/include",
				// 2. Chỉ cho linker nơi tìm thư viện (.a)
				"-L${workspaceFolder}/lib/SFML-2.6.1/lib",
				// 3. Gom tất cả các file .cpp để biên dịch
				"${workspaceFolder}/src/*.cpp",
				"${workspaceFolder}/src/ui/*.cpp",
				// 4. Đặt tên và vị trí cho file .exe
				"-o",
				"${workspaceFolder}/bin/app-debug.exe",
				// 5. Liên kết với các thư viện SFML (bản debug có đuôi -d)
				"-lsfml-graphics-d",
				"-lsfml-window-d",
				"-lsfml-system-d"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [
				"$gcc"
			]
		}
	]
}